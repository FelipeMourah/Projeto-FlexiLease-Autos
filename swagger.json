{
  "swagger": "2.0",
  "info": {
    "description": "API documentation for Car Rental Service",
    "version": "1.0.0",
    "title": "Car Rental API"
  },
  "host": "localhost:3000",
  "basePath": "/api/v1",
  "tags": [
    {
      "name": "cars",
      "description": "Operations about cars"
    },
    {
      "name": "users",
      "description": "Operations about users"
    },
    {
      "name": "reserves",
      "description": "Operations about reserves"
    }
  ],
  "paths": {
    "/cars": {
      "get": {
        "tags": ["cars"],
        "summary": "Lista todos os carros",
        "responses": {
          "200": {
            "description": "Lista de carros",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Car"
              }
            }
          }
        }
      },
      "post": {
        "tags": ["cars"],
        "summary": "Adiciona um novo carro",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Car"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Carro criado"
          },
          "400": {
            "description": "Requisição inválida"
          }
        }
      }
    },
    "/cars/{id}": {
      "get": {
        "tags": ["cars"],
        "summary": "Exibe um carro pelo ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Carro encontrado",
            "schema": {
              "$ref": "#/definitions/Car"
            }
          },
          "404": {
            "description": "Carro não encontrado"
          }
        }
      },
      "put": {
        "tags": ["cars"],
        "summary": "Atualiza um carro pelo ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Car"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Carro atualizado"
          },
          "400": {
            "description": "Requisição inválida"
          },
          "404": {
            "description": "Carro não encontrado"
          }
        }
      },
      "delete": {
        "tags": ["cars"],
        "summary": "Deleta um carro pelo ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "204": {
            "description": "Carro deletado"
          },
          "404": {
            "description": "Carro não encontrado"
          }
        }
      }
    },
    "/cars/{id}/accessories": {
      "post": {
        "tags": ["cars"],
        "summary": "Adiciona um acessório ao carro",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Accessory"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Acessório adicionado"
          },
          "400": {
            "description": "Requisição inválida"
          },
          "404": {
            "description": "Carro não encontrado"
          }
        }
      }
    },
    "/users": {
      "get": {
        "tags": ["users"],
        "summary": "Lista todos os usuários",
        "responses": {
          "200": {
            "description": "Lista de usuários",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/User"
              }
            }
          }
        }
      },
      "post": {
        "tags": ["users"],
        "summary": "Adiciona um novo usuário",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Usuário criado"
          },
          "400": {
            "description": "Requisição inválida"
          }
        }
      }
    },
    "/users/{id}": {
      "get": {
        "tags": ["users"],
        "summary": "Exibe um usuário pelo ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Usuário encontrado",
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          "404": {
            "description": "Usuário não encontrado"
          }
        }
      },
      "put": {
        "tags": ["users"],
        "summary": "Atualiza um usuário pelo ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Usuário atualizado"
          },
          "400": {
            "description": "Requisição inválida"
          },
          "404": {
            "description": "Usuário não encontrado"
          }
        }
      },
      "delete": {
        "tags": ["users"],
        "summary": "Deleta um usuário pelo ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "204": {
            "description": "Usuário deletado"
          },
          "404": {
            "description": "Usuário não encontrado"
          }
        }
      }
    },
    "/users/authenticate": {
      "post": {
        "tags": ["users"],
        "summary": "Autentica um usuário",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/AuthenticateUser"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Usuário autenticado"
          },
          "400": {
            "description": "Requisição inválida"
          },
          "401": {
            "description": "Credenciais inválidas"
          }
        }
      }
    }
  },
  "definitions": {
    "Car": {
      "type": "object",
      "required": ["id", "model", "color", "year", "value_per_day", "accessories", "number_of_passengers"],
      "properties": {
        "id": {
          "type": "string",
          "example": "1"
        },
        "model": {
          "type": "string",
          "example": "Modelo Exemplo"
        },
        "color": {
          "type": "string",
          "example": "Vermelho"
        },
        "year": {
          "type": "integer",
          "example": 2022
        },
        "value_per_day": {
          "type": "string",
          "example": "100.00"
        },
        "accessories": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "example": "1"
              },
              "description": {
                "type": "string",
                "example": "Descrição do acessório"
              }
            }
          }
        },
        "number_of_passengers": {
          "type": "string",
          "example": "5"
        }
      }
    },
    "User": {
      "type": "object",
      "required": ["_id", "name", "birth", "cpf", "email", "password", "cep", "address", "qualified"],
      "properties": {
        "_id": {
          "type": "string",
          "example": "1"
        },
        "name": {
          "type": "string",
          "example": "Nome Exemplo"
        },
        "birth": {
          "type": "string",
          "format": "date",
          "example": "2000-01-01"
        },
        "cpf": {
          "type": "string",
          "example": "123.456.789-00"
        },
        "email": {
          "type": "string",
          "example": "email@exemplo.com"
        },
        "password": {
          "type": "string",
          "example": "senha123"
        },
        "cep": {
          "type": "string",
          "example": "12345-678"
        },
        "address": {
          "type": "object",
          "required": ["street", "neighborhood", "city", "state"],
          "properties": {
            "street": {
              "type": "string",
              "example": "Rua Exemplo"
            },
            "neighborhood": {
              "type": "string",
              "example": "Bairro Exemplo"
            },
            "city": {
              "type": "string",
              "example": "Cidade Exemplo"
            },
            "state": {
              "type": "string",
              "example": "Estado Exemplo"
            }
          }
        },
        "qualified": {
          "type": "string",
          "enum": ["sim", "não"],
          "example": "sim"
        }
      }
    },
    "AuthenticateUser": {
      "type": "object",
      "required": ["email", "password"],
      "properties": {
        "email": {
          "type": "string",
          "example": "email@exemplo.com"
        },
        "password": {
          "type": "string",
          "example": "senha123"
        }
      }
    },
    "Accessory": {
      "type": "object",
      "required": ["name", "description"],
      "properties": {
        "id": {
          "type": "string",
          "example": "1"
        },
        "name": {
          "type": "string",
          "example": "Acessório Exemplo"
        },
        "description": {
          "type": "string",
          "example": "Descrição do acessório"
        }
      }
    }
  }
}
